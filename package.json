{
    "name": "whatsapp-api-nodejs",
    "version": "0.0.1",
    "description": "whatsapp-api-nodejs is builton top of Baileys-MD.",
    "main": "server.js",
    "scripts": {
        "build:digitalocean": "npm install",
        "start": "node src/server.js",
        "dev": "nodemon",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "lint:check": "eslint .",
        "lint:fix": "eslint --fix .",
        "test": "mocha tests/*.test.js --exit",
        "configure-husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\""
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx}": [
            "prettier --write",
            "git add"
        ],
        "*.{html,css,less,ejs}": [
            "prettier --write",
            "git add"
        ]
    },
    "repository": "git@github.com:appWA-vip/api-whatsapp-socket.git",
    "author": "Miguel Lomeli <lomelidev@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "@adiwajshing/keyed-db": "^0.2.4",
        "@whiskeysockets/baileys": "github:WhiskeySockets/Baileys#update-proto/stable",
        "axios": "^1.1.3",
        "dotenv": "^16.0.3",
        "ejs": "^3.1.7",
        "express": "^4.18.2",
        "express-exception-handler": "^1.3.23",
        "firebase": "^10.7.1",
        "link-preview-js": "^3.0.5",
        "mongodb": "^6.3.0",
        "mongoose": "^8.0.0",
        "multer": "^1.4.5-lts.1",
        "node-cache": "^5.1.2",
        "pino": "^8.16.1",
        "qrcode": "^1.5.1",
        "sharp": "^0.33.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^9.1.0",
        "husky": "^8.0.2",
        "lint-staged": "^15.0.2",
        "mocha": "^10.1.0",
        "nodemon": "^3.0.2",
        "prettier": "^3.1.1",
        "supertest": "^6.3.1"
    },
    "engines": {
        "node": "18.12.1"
    }
}
